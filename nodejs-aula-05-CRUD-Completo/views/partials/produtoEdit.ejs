<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Editar Produto</h1>
            <hr>
        </div>
        <div class="card-body">
            <form action="/produtos/update" method="post">

                <label>Nome do Produto:</label>
                <input class="form-control" type="text" name="nome" id="nome" value="<%= produto.nome %>" required>

                <label>Preço do Produto</label>
                <input class="form-control" type="text" name="preco" id="preco" value="<%= produto.preco %>" required>

                <label>Categoria Produto</label>
                <input class="form-control" type="text" name="categoria" id="categoria" value="<%= produto.categoria %>" required>

                <input type="hidden" name="id" id="id" value="<%= produto.id %>">
                <br>

                <input type="submit" class="btn btn-warning" value="Alterar" onclick="return confirm('Confirma as alterações dos dados?')">
            </form>
        </div>
    </div>
</div>

<%- include ('partials/footer.ejs') %>