<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Cadastrar Produto</h1>
        </div>
        <div class="card-body">
            <form action="/produtos/new" method="post">
                <label>Nome do Produto:</label>
                <input class="form-control" type="text" name="nome" id="nome" placeholder="Insira o nome do produto" required></input>

                <label>Preço:</label>
                <input class="form-control" type="text" name="preco" id="preco" placeholder="Insira o preço do produto" required></input>

                <label>Categoria:</label>
                <input class="form-control" type="text" name="categoria" id="categoria" placeholder="Insira a categoria do produto" required></input>
                <br>
                <input type="submit" class="btn btn-success" value="Cadastrar">
            </form>
        </div>
    </div>
</div>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Produtos</h1>
            </div>
            <div class="card-body">
                <table>
                    <thead>
                        <tr>
                            <th></th>
                            <th>Nome:</th>
                            <th>Preço:</th>
                            <th>Categoria:</th>
                            <th colspan="2">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% produtos.forEach(produto => { %>
                        <tr>
                            <td><img src="imgs/product.png" width="30px"></td>
                            <td><%= produto.nome %></td>
                            <td><%= produto.preco.toLocaleString('pt-br', {style: 'currency', currency: 'BRL'}) %></td>
                            <td><%= produto.categoria %></td>
                            <td><a style="color: orange" href="/produtos/edit/<%= produto.id %>">Editar</a></td>
                            <td><a href="/produtos/delete/<%= produto.id %>" onclick="return confirm('Deseja realmente apagar esse cadastro?')">Apagar</a></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<%- include ('partials/footer.ejs') %>